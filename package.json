{
  "name": "remark-embed-images",
  "version": "1.0.0",
  "description": "Embed images with data: URIs, inlining base64-encoded sources",
  "license": "MIT",
  "keywords": [
    "image",
    "embed",
    "base64",
    "inline",
    "remark"
  ],
  "repository": "https://github.com/remarkjs/remark-embed-images",
  "bugs": "https://github.com/remarkjs/remark-embed-images/issues",
  "author": "David Herges <david@spektrakel.de>",
  "files": [
    "index.js"
  ],
  "dependencies": {
    "mime": "^2.3.1",
    "unist-util-visit": "^1.0.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^7.2.1",
    "@commitlint/config-conventional": "^7.1.2",
    "husky": "^1.1.0",
    "nyc": "^13.0.0",
    "prettier": "^1.14.2",
    "remark": "^10.0.0",
    "remark-cli": "^6.0.0",
    "remark-html": "^8.0.0",
    "remark-preset-wooorm": "^4.0.0",
    "standard-version": "^4.2.0",
    "tape": "^4.0.0",
    "to-vfile": "^5.0.0",
    "xo": "^0.23.0"
  },
  "scripts": {
    "format": "remark readme.md -qfo && prettier --write \"**/*.js\" && xo --fix",
    "test:api": "node test",
    "test:coverage": "nyc --reporter lcov tape test/index.js",
    "test": "yarn run format && yarn run test:coverage",
    "release": "standard-version --prerelease pre --message 'release: cut v%s'"
  },
  "nyc": {
    "check-coverage": true,
    "lines": 100,
    "functions": 100,
    "branches": 100
  },
  "remarkConfig": {
    "plugins": [
      "preset-wooorm"
    ]
  },
  "prettier": {
    "tabWidth": 2,
    "useTabs": false,
    "singleQuote": true,
    "bracketSpacing": false,
    "semi": false,
    "trailingComma": "none"
  },
  "xo": {
    "prettier": true,
    "esnext": false
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  }
}
