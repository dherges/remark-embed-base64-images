{
  "name": "remark-embed-images",
  "version": "1.0.1",
  "description": "Embed images with data: URIs, inlining base64-encoded sources",
  "license": "MIT",
  "keywords": [
    "image",
    "embed",
    "base64",
    "inline",
    "remark"
  ],
  "repository": "https://github.com/remarkjs/remark-embed-images",
  "bugs": "https://github.com/remarkjs/remark-embed-images/issues",
  "author": "David Herges <david@spektrakel.de> (https://spektrakel.de)",
  "contributors": [
    "David Herges <david@spektrakel.de> (https://spektrakel.de)",
    "Titus Wormer <tituswormer@gmail.com> (https://wooorm.com)"
  ],
  "files": [
    "index.js"
  ],
  "dependencies": {
    "mime": "^2.3.1",
    "unist-util-visit": "^1.0.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^8.0.0",
    "@commitlint/config-conventional": "^8.0.0",
    "browserify": "^16.0.0",
    "husky": "^2.0.0",
    "nyc": "^14.0.0",
    "prettier": "^1.0.0",
    "remark": "^10.0.0",
    "remark-cli": "^6.0.0",
    "remark-html": "^9.0.0",
    "remark-preset-wooorm": "^5.0.0",
    "standard-version": "^6.0.0",
    "tape": "^4.0.0",
    "tinyify": "^2.0.0",
    "to-vfile": "^6.0.0",
    "xo": "^0.24.0"
  },
  "scripts": {
    "format": "remark readme.md -qfo && prettier --write \"**/*.js\" && xo --fix",
    "build-bundle": "browserify . -s remarkEmbedImages -o remark-embed-images.js",
    "build-mangle": "browserify . -s remarkEmbedImages -p tinyify -o remark-embed-images.min.js",
    "build": "npm run build-bundle && npm run build-mangle",
    "test:api": "node test",
    "test:coverage": "nyc --reporter lcov tape test/index.js",
    "test": "npm run format && npm run build && npm run test:coverage",
    "release": "standard-version --prerelease pre --message 'release: cut v%s'"
  },
  "nyc": {
    "check-coverage": true,
    "lines": 100,
    "functions": 100,
    "branches": 100
  },
  "remarkConfig": {
    "plugins": [
      "preset-wooorm"
    ]
  },
  "prettier": {
    "tabWidth": 2,
    "useTabs": false,
    "singleQuote": true,
    "bracketSpacing": false,
    "semi": false,
    "trailingComma": "none"
  },
  "xo": {
    "prettier": true,
    "esnext": false
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  }
}
